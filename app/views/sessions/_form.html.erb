<div class="ui middle aligned center loginform">
  <div class="column">
    <h2 class="ui image header">
      <div class="content">
        Log In
      </div>
    </h2>
    <%= form_tag login_path, class: "ui large form" do %>
      <div class="ui stacked secondary segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="mail outline icon"></i>
              <%= text_field_tag :email, nil, placeholder: "Email Address" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
              <%= password_field_tag :password, nil, placeholder: "Password" %>
          </div>
        </div>
          <%= submit_tag "Submit", class: "ui fluid large button" %>
      </div>
    <% end %>
    <div class="ui message"> New to us? <%= link_to "Register", signup_path %></div>
  </div>
</div>